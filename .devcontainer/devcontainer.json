{
    "name": "DexGraspNet",
    "build": {
        "context": ".",
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--gpus", "all",
        "--network", "host",
        "--env", "ACCEPT_EULA=Y",
        "--env", "DISPLAY",
        "--volume", "/tmp/.X11-unix:/tmp/.X11-unix",
        "--privileged",
        "--interactive",
        "--tty"
      ],
    "mounts": [
        "source=/home/octipus/Projects/DexGraspNet,target=/app,type=bind"
      ],
    "forwardPorts": [3000],
    "remoteUser": "root" // or the specific user you have in the container
}
